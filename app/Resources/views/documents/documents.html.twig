{% extends 'base.html.twig' %}
{% block body %}
    <table class="table table-striped data-table" data-order='[[ 1, "desc" ]]'>
        <thead>
        <tr>
            <th>Filename</th>
            <th>Date</th>
            <th>User</th>
            <th>Task Id</th>
        </tr>
        </thead>
        <tbody>
        {% for document in documents %}
        <tr>
            <th><a href="{{ document.getUrl }}" target="_blank">{{ document.getFilename }}</a></th>
            <td>{{ document.getCreateDate|date("Y-m-d H:i:s") }}</td>
            <td>
                <img align="left" width="16" height="16" src="{{ document.getDocumentToUser.getUserAvatarUrl }}" style="margin-right:10px;">
                <span class="js_user_preview" data-user-id="{{ document.getAuthor }}" data-task-id="{{ document.getTaskId }}">{{ document.getDocumentToUser.getTalent }}</span></td>
            <th><a href="{{ path('task_detail', {'id':document.getTaskId()}) }}">{{ document.getTaskId() }}</a></th>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
