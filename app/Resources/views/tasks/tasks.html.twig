{% extends 'base.html.twig' %}
{% block body %}
    <table class="table table-striped">
        <thead class="thead-default">
        <tr>
            <th>Task Id</th>
            <th>Title</th>
            <th>Languages</th>
            <th>User</th>
            <th>Started On</th>
            <th>Original Document</th>
            <th>State</th>
        </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            {% set document = taskToDocument[task.getTaskId()] %}
            <tr>
                <th><a href="{{ path('task_detail', {'id':task.getTaskId()}) }}">{{ task.getTaskId() }}</a></th>
                <td>{{ task.getTitle() }}</td>
                <td>{{ task.getLanguages() }}</td>
                <td>{{ task.getUserId() }}</td>
                <td>{{ task.getTasksDate() }}</td>
                <td>
                    <img align="left" width="64" height="64" src="{{ path('task_image', {'id':task.getTaskId()}) }}" style="margin-right:10px;">
                    <a href="{{ document.getUrl() }}" target="_blank">{{ document.getFilename() }}</a>
                </td>
                <td>{{ task.getState() }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
